{
  "version": 2,
  "builds": [
    { "src": "next.config.js", "use": "@now/next" },
    {
      "src": "api/**/*",
      "use": "@now/node",
      "config": {
        "includeFiles": ["manifest/**"],
        "maxLambdaSize": "50mb"
      }
    },
    { "src": "static/**/*", "use": "@now/static" }
  ],
  "routes": [
    {
      "src": "/player/(?<platform>[^/]+)/(?<name>[^/]+)([/]*)$",
      "dest": "/player?name=$name&platform=$platform"
    },
    {
      "src": "/player/(?<platform>[^/]+)/(?<name>[^/]+)/(?<activity>[^/]+)([/]*)$",
      "dest": "/$activity?name=$name&platform=$platform"
    },
    {
      "src": "/",
      "dest": "/"
    },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/error" }
  ],
  "env": {
    "API_KEY": "@bungieapikey"
  }
}
